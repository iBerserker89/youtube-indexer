# public/.htaccess
<IfModule mod_rewrite.c>
  RewriteEngine On

  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Mapear /channels -> /channels.php (mant√©m query string)
  RewriteRule ^channels/?$ channels.php [QSA,L]
</IfModule>

# Evita conflitos de content negotiation do Apache
Options -MultiViews
