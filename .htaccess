# ============================================
# root/.htaccess
# ============================================
# Expor /channels como endpoint, apontando para
# api/channels.php.
# ============================================

<IfModule mod_rewrite.c>
  RewriteEngine On

  # RewriteBase /meuapp/

  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Mapear /channels -> /api/channels.php (mant√©m query string)
  RewriteRule ^channels/?$ api/channels.php [QSA,L]
</IfModule>

# Evita conflitos de content negotiation
Options -MultiViews
